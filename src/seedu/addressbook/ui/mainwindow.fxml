<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" stylesheets="@/seedu/addressbook/ui/DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seedu.addressbook.ui.MainWindow">

    <children>

        <TextField fx:id="commandInput" onAction="#onCommand" VBox.vgrow="NEVER">
         <font>
            <Font size="19.0" />
         </font></TextField>

        <TextArea fx:id="outputConsole" editable="false" wrapText="true" VBox.vgrow="ALWAYS">
         <font>
            <Font size="14.0" />
         </font></TextArea>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button minWidth="42.0" mnemonicParsing="false" onMouseClicked="#list" prefHeight="27.0" text="List" />
            <Button minWidth="24.0" mnemonicParsing="false" onMouseClicked="#clearCommandInput" prefHeight="27.0" text="Clear input" />
            <Button mnemonicParsing="false" onMouseClicked="#clearOutputConsole" text="Clear output" />
            <Button mnemonicParsing="false" onMouseClicked="#exitApp" text="Quit" />
        </buttons>
      </ButtonBar>

    </children>

</VBox>
