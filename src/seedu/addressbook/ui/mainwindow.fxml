<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" stylesheets="@/seedu/addressbook/ui/DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seedu.addressbook.ui.MainWindow">

    <children>

        <TextField fx:id="commandInput" onAction="#onCommand" VBox.vgrow="NEVER">
        </TextField>

        <TextArea fx:id="outputConsole" editable="false" stylesheets="@DarkTheme.css" wrapText="true" VBox.vgrow="ALWAYS">
        </TextArea>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" stylesheets="@DarkTheme.css">
        <buttons>
            <Button mnemonicParsing="false" onMouseClicked="#handleClearButton" text="Clear" />
            <Button mnemonicParsing="false" onMouseClicked="#handleExitButton" stylesheets="@DarkTheme.css" text="Exit" />
        </buttons>
      </ButtonBar>

    </children>

</VBox>
