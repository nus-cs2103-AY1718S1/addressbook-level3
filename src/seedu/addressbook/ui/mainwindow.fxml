<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" stylesheets="@/seedu/addressbook/ui/LightTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seedu.addressbook.ui.MainWindow">

    <children>
        
        <ButtonBar prefHeight="18.0" prefWidth="538.0">
          <buttons>
            <ImageView fitHeight="18.0" fitWidth="354.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Test2.png" />
               </image>
            </ImageView>
            <Button minWidth="62.0" mnemonicParsing="false" onAction="#clearTextButton" prefHeight="27.0" text="CLEAR TEXT">
               <font>
                  <Font name="Courier" size="11.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#showAllButton" text="SHOW ALL">
               <font>
                  <Font name="Courier" size="11.0" />
               </font></Button>
          </buttons>
        </ButtonBar>

        <TextField fx:id="commandInput" onAction="#onCommand" VBox.vgrow="NEVER">
        </TextField>

        <TextArea fx:id="outputConsole" editable="false" wrapText="true" VBox.vgrow="ALWAYS">
        </TextArea>

    </children>

</VBox>
