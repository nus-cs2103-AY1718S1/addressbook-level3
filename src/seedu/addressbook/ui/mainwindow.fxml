<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Ellipse?>

<VBox alignment="center"
      stylesheets="@/seedu/addressbook/ui/DarkTheme.css"
      xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="seedu.addressbook.ui.MainWindow">

    <children>

        <TextField fx:id="commandInput" onAction="#onCommand" VBox.vgrow="NEVER">

            <tooltip>
                <Tooltip text="Enter the command here. Type 'help' for the list of commands" wrapText="true"/>
            </tooltip>
        </TextField>
        
        <Circle fill="DODGERBLUE" radius="13.0" stroke="BLACK" strokeType="INSIDE"/>
        <Ellipse fill="DODGERBLUE" radiusX="16.0" radiusY="16.0" stroke="BLACK" strokeType="INSIDE"/>

        <TextArea fx:id="outputConsole" editable="false" wrapText="true" VBox.vgrow="ALWAYS">
        </TextArea>

    </children>

</VBox>