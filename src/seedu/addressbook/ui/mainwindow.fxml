<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" stylesheets="@/seedu/addressbook/ui/DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seedu.addressbook.ui.MainWindow">

    <children>
      <MenuBar stylesheets="@DarkTheme.css">
        <menus>
          <Menu mnemonicParsing="false" text="Exit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit AddressBook" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text=" ">
                     <graphic>
                        <SplitMenuButton mnemonicParsing="false" text="Command Help">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#handleAddHelp" text="Add" />
                              <MenuItem mnemonicParsing="false" onAction="#handleDeleteHelp" text="Delete" />
                              <MenuItem mnemonicParsing="false" onAction="#handleClearHelp" text="Clear" />
                              <MenuItem mnemonicParsing="false" onAction="#handleFindHelp" text="Find" />
                            <MenuItem mnemonicParsing="false" onAction="#handleListHelp" text="List" />
                              <MenuItem mnemonicParsing="false" onAction="#handleViewHelp" text="View" />
                              <MenuItem mnemonicParsing="false" onAction="#handleViewAllHelp" text="View All" />
                              <MenuItem mnemonicParsing="false" onAction="#handleHelpHelp" text="Help" />
                              <MenuItem mnemonicParsing="false" onAction="#handleExitHelp" text="Exit" />
                          </items>
                        </SplitMenuButton>
                     </graphic>
                  </MenuItem>
            </items>
          </Menu>
        </menus>
      </MenuBar>

        <TextField fx:id="commandInput" onAction="#onCommand" stylesheets="@DarkTheme.css" VBox.vgrow="NEVER">
        </TextField>

        <TextArea fx:id="outputConsole" editable="false" stylesheets="@DarkTheme.css" wrapText="true" VBox.vgrow="ALWAYS">
        </TextArea>

    </children>

</VBox>
